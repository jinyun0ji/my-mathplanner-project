{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/auth/kakao",
        "function": "kakaoLogin"
      },
      {
        "source": "/auth/naver",
        "function": "naverLogin"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
