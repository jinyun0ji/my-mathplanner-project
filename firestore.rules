rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* =========================
       공통 헬퍼
    ========================= */
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function role() {
      return userDoc().data.role;
    }

    function isAdmin() {
      return role() == 'admin';
    }

    function isStaff() {
      return role() in ['admin', 'teacher', 'staff'];
    }

    /* =========================
       users (가장 중요)
    ========================= */
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isAdmin();
    }

    /* =========================
       Staff 전용 컬렉션
    ========================= */
    match /students/{docId} {
      allow read, list: if isStaff();
      allow write: if isAdmin();
    }

    match /classes/{docId} {
      allow read, list: if isStaff();
      allow write: if isAdmin();
    }

    match /tests/{docId} {
      allow read, list: if isStaff();
      allow write: if isAdmin();
    }

    match /lessonLogs/{docId} {
      allow read, list: if isStaff();
      allow write: if isStaff();
    }

    match /attendanceLogs/{docId} {
      allow read, list: if isStaff();
      allow write: if isStaff();
    }

    match /clinicLogs/{docId} {
      allow read, list: if isStaff();
      allow write: if isStaff();
    }

    match /workLogs/{docId} {
      allow read, list: if isStaff();
      allow write: if isStaff();
    }

    match /announcements/{docId} {
      allow read: if isSignedIn();
      allow write: if isStaff();
    }

    match /homeworkAssignments/{docId} {
      allow read: if isSignedIn();
      allow write: if isStaff();
    }

    match /payments/{docId} {
      allow read, list: if isStaff();
      allow write: if isAdmin();
    }

    match /grades/{docId} {
      allow read, list: if isStaff();
      allow write: if isStaff();
    }

    match /homeworkResults/{docId} {
      allow read, list: if isStaff();
      allow write: if isStaff();
    }

    /* =========================
       기본 거부
    ========================= */
    match /{document=**} {
      allow read, write: if false;
    }
  }
}