rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* =========================
       공통 헬퍼
    ========================= */
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return isSignedIn()
        ? get(/databases/$(database)/documents/users/$(request.auth.uid))
        : null;
    }

    function userRole() {
      return userDoc() != null ? userDoc().data.role : null;
    }

    function isAdmin() {
      return userRole() == 'admin';
    }

    function isStaff() {
      return userRole() == 'staff' || userRole() == 'teacher';
    }

    function isStudent() {
      return userRole() == 'student';
    }

    function isParent() {
      return userRole() == 'parent';
    }

    function parentStudentUids() {
      return isParent() && userDoc().data.linkedStudentUids != null
        ? userDoc().data.linkedStudentUids
        : [];
    }

    /* =========================
       users (가장 중요)
    ========================= */
    match /users/{userId} {
      allow read: if isSignedIn()
        && (
          request.auth.uid == userId
          || isAdmin()
          || isStaff()
          || (isParent() && userId in parentStudentUids())
        );
      allow write: if isAdmin();
    }

    /* =========================
       Staff 전용 컬렉션
    ========================= */
    match /classes/{docId} {
      allow read, list: if isStaff() || isAdmin();
      allow write: if isAdmin();
    }

    match /tests/{docId} {
      allow read, list: if isStaff() || isAdmin();
      allow write: if isAdmin();
    }

    match /lessonLogs/{docId} {
      allow read, list: if isStaff()
        || isAdmin()
        || (isStudent() && request.auth.uid == resource.data.studentUid)
        || (isParent() && resource.data.studentUid in parentStudentUids());
      allow write: if isStaff() || isAdmin();
    }

    match /attendanceLogs/{docId} {
      allow read, list: if isStaff()
        || isAdmin()
        || (isStudent() && request.auth.uid == resource.data.studentUid)
        || (isParent() && resource.data.studentUid in parentStudentUids());
      allow write: if isStaff() || isAdmin();
    }

    match /clinicLogs/{docId} {
      allow read, list: if isStaff()
        || isAdmin()
        || (isStudent() && request.auth.uid == resource.data.studentUid)
        || (isParent() && resource.data.studentUid in parentStudentUids());
      allow write: if isStaff() || isAdmin();
    }

    match /workLogs/{docId} {
      allow read, list: if isStaff() || isAdmin();
      allow write: if isStaff() || isAdmin();
    }

    match /announcements/{docId} {
      allow read: if isSignedIn();
      allow write: if isStaff() || isAdmin();
    }

    match /homeworkAssignments/{docId} {
      allow read: if isSignedIn();
      allow write: if isStaff() || isAdmin();
    }

    match /payments/{docId} {
      allow read, list: if isStaff() || isAdmin();
      allow write: if isAdmin();
    }

    match /grades/{docId} {
      allow read, list: if isStaff()
        || isAdmin()
        || (isStudent() && request.auth.uid == resource.data.studentUid)
        || (isParent() && resource.data.studentUid in parentStudentUids());
      allow write: if isStaff() || isAdmin();
    }

    match /homeworkResults/{docId} {
      allow read, list: if isStaff()
        || isAdmin()
        || (isStudent() && request.auth.uid == resource.data.studentUid)
        || (isParent() && resource.data.studentUid in parentStudentUids());
      allow write: if isStaff() || isAdmin();
    }

    /* =========================
       기본 거부
    ========================= */
    match /{document=**} {
      allow read, write: if false;
    }
  }
}