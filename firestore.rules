rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* =========================
       공통 헬퍼
    ========================= */
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return isSignedIn()
        ? get(/databases/$(database)/documents/users/$(request.auth.uid))
        : null;
    }

    function userRole() {
      return userDoc() != null ? userDoc().data.role : null;
    }
    
    function resourceRole() {
      return resource != null ? resource.data.role : null;
    }

    function requestRole() {
      return request.resource.data.role;
    }

    function isResourceRole(role) {
      return resourceRole() == role;
    }

    function isRequestRole(role) {
      return requestRole() == role;
    }

    function isAdmin() {
      return userRole() == 'admin';
    }

    function isStaff() {
      return userRole() == 'staff';
    }
    
    function isTeacher() {
      return userRole() == 'teacher';
    }

    function isStaffOrTeacher() {
      return isStaff() || isTeacher();
    }
    
    function isStaffOrAdmin() {
      return isStaff() || isAdmin();
    }
    
    function isStaffOrAdminOrTeacher() {
      return isStaffOrTeacher() || isAdmin();
    }

    function isStudent() {
      return userRole() == 'student';
    }

    function isParent() {
      return userRole() == 'parent';
    }

    function parentStudentUids() {
      return isParent() && userDoc().data.studentIds != null
        ? userDoc().data.studentIds
        : [];
    }
    
    function hasValidInvite(inviteId, role) {
      return inviteId is string
        && exists(/databases/$(database)/documents/invites/$(inviteId))
        && get(/databases/$(database)/documents/invites/$(inviteId)).data.consumed == false
        && get(/databases/$(database)/documents/invites/$(inviteId)).data.role == role
        && (
          get(/databases/$(database)/documents/invites/$(inviteId)).data.expiresAt == null
          || get(/databases/$(database)/documents/invites/$(inviteId)).data.expiresAt > request.time
        );
    }

    /* =========================
       users (가장 중요)
    ========================= */
    match /users/{userId} {
      allow read: if isSignedIn()
        && (
          request.auth.uid == userId
          || (resource.data.authUid != null && request.auth.uid == resource.data.authUid)
          || isStaffOrAdminOrTeacher()
          || (isParent() && isResourceRole('student')
              && (resource.data.authUid in parentStudentUids() || userId in parentStudentUids()))
        );
      allow create: if isStaffOrAdminOrTeacher()
        || (
          isSignedIn()
          && request.auth.uid == userId
          && request.resource.data.active == true
          && (isRequestRole('student') || isRequestRole('parent'))
          && hasValidInvite(request.resource.data.inviteId, request.resource.data.role)
        );
      allow update: if isStaffOrAdminOrTeacher()
        || (
          isSignedIn()
          && request.auth.uid == userId
          && (isResourceRole('student') || isResourceRole('parent'))
          && request.resource.data.role == resource.data.role
        );
      allow delete: if isStaffOrAdminOrTeacher()
        || (isSignedIn() && request.auth.uid == userId);
    }

    /* =========================
       Staff 전용 컬렉션
    ========================= */
    match /classes/{docId} {
      allow read, list: if isSignedIn();
      allow write: if isAdmin();
    }

    match /tests/{docId} {
      allow read, list: if isSignedIn();
      allow write: if isAdmin();
    }

    match /lessonLogs/{docId} {
      allow read, list: if isSignedIn();
      allow write: if isStaffOrAdminOrTeacher();
    }

    match /attendanceLogs/{docId} {
      allow read, list: if isStaffOrAdminOrTeacher()
        || (isStudent() && request.auth.uid == resource.data.studentUid)
        || (isParent() && resource.data.studentUid in parentStudentUids());
      allow write: if isStaffOrAdminOrTeacher();
    }

    match /clinicLogs/{docId} {
      allow read, list: if isStaffOrAdminOrTeacher()
        || (isStudent() && request.auth.uid == resource.data.authUid)
        || (isParent() && resource.data.authUid in parentStudentUids());
      allow write: if isStaffOrAdminOrTeacher();
    }

    match /workLogs/{docId} {
      allow read, list: if isStaffOrAdminOrTeacher();
      allow write: if isStaffOrAdminOrTeacher();
    }

    match /announcements/{docId} {
      allow read: if isSignedIn();
      allow write: if isStaffOrAdminOrTeacher();
    }

    match /homeworkAssignments/{docId} {
      allow read: if isSignedIn();
      allow write: if isStaffOrAdminOrTeacher();
    }

    match /payments/{docId} {
      allow read, list: if isStaffOrAdminOrTeacher();
      allow write: if isAdmin();
    }

    match /grades/{docId} {
      allow read, list: if isStaffOrAdminOrTeacher()
        || (isStudent() && request.auth.uid == resource.data.authUid)
        || (isParent() && resource.data.authUid in parentStudentUids());
      allow write: if isStaffOrAdminOrTeacher();
    }

    match /homeworkResults/{docId} {
      allow read, list: if isStaffOrAdminOrTeacher()
        || (isStudent() && request.auth.uid == resource.data.authUid)
        || (isParent() && resource.data.authUid in parentStudentUids());
      allow write: if isStaffOrAdminOrTeacher();
    }
    
    match /videoProgress/{docId} {
      allow read, list: if isSignedIn()
        && request.auth.uid == resource.data.authUid;
      allow write: if isSignedIn()
        && request.auth.uid == request.resource.data.authUid;
    }

    match /externalSchedules/{docId} {
      allow read, list: if isSignedIn()
        && request.auth.uid == resource.data.authUid;
      allow write: if isSignedIn()
        && request.auth.uid == request.resource.data.authUid;
    }

    match /invites/{inviteId} {
      allow get: if true;
      allow list: if false;
      allow create, delete: if isStaffOrAdmin();
      allow update: if isStaffOrAdmin()
        || (
          isSignedIn()
          && resource.data.consumed == false
          && request.resource.data.consumed == true
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['consumed'])
        );
    }
    
    /* =========================
       Notifications
    ========================= */
    match /notifications/{logId} {
      allow read, write: if isStaffOrAdminOrTeacher();
    }

    match /notifications/{uid}/items/{notificationId} {
      allow read: if isSignedIn()
        && (request.auth.uid == uid || isStaffOrAdminOrTeacher());
      allow write: if isStaffOrAdminOrTeacher();
    }

    match /notifications/{uid}/meta {
      allow read, write: if isSignedIn()
        && (request.auth.uid == uid || isStaffOrAdminOrTeacher());
    }

    /* =========================
       기본 거부
    ========================= */
    match /{document=**} {
      allow read, write: if false;
    }
  }
}